				<img src="https://web.archive.org/web/20091027105929/http://www.geocities.com/Tokyo/Ginza/3412/netscape.gif" alt="Netscape">
				<img src="https://web.archive.org/web/20091027105929/http://www.geocities.com/Tokyo/Ginza/3412/ie.gif" alt="Internet Explorer">
			</div>
		</footer>
	</main>
</Layout>

<style>
	/* Base styles */
	main {
		font-family: "Comic Sans MS", "Times New Roman", serif;
		background-color: #000080; /* Navy blue background */
		color: white;
		background-image: url('https://web.archive.org/web/20091027154823/http://www.geocities.com/Tokyo/Ginza/5502/star.gif');
		border: 10px ridge #ff00ff;
		padding: 20px;
		max-width: 800px;
		margin: 0 auto;
		text-align: center;
	}

	/* Blink animation */
	@keyframes blink {
		0% { opacity: 1; }
		50% { opacity: 0; }
		100% { opacity: 1; }
	}

	.blink {
		animation: blink 1s infinite;
		font-size: 3rem;
		font-weight: bold;
		text-shadow: 2px 2px #ff00ff;
		margin: 10px 0;
	}

	/* Marquee styles */
	.marquee-container {
		background-color: black;
		padding: 10px;
		border: 3px outset #c0c0c0;
	}

	/* Rainbow text */
	@keyframes rainbow {
		0% { color: red; }
		14% { color: orange; }
		28% { color: yellow; }
		42% { color: green; }
		57% { color: blue; }
		71% { color: indigo; }
		85% { color: violet; }
		100% { color: red; }
	}

	.rainbow-text {
		animation: rainbow 5s infinite;
		font-size: 1.5rem;
		font-weight: bold;
	}

	/* Under construction */
	.under-construction {
		display: flex;
		justify-content: center;
		align-items: center;
		margin: 20px 0;
		gap: 20px;
	}

	/* Profile section */
	.profile {
		display: flex;
		align-items: center;
		background-color: rgba(0, 0, 0, 0.5);
		border: 5px inset #c0c0c0;
		padding: 20px;
		margin: 20px 0;
	}

	.avatar {
		width: 150px;
		height: 150px;
		margin-right: 20px;
	}

	.bio {
		text-align: left;
	}

	/* Neon text */
	.neon-text {
		color: #fff;
		text-shadow: 0 0 5px #fff, 0 0 10px #fff, 0 0 15px #0ff, 0 0 20px #0ff, 0 0 25px #0ff;
	}

	/* Highlight text */
	.highlight {
		background-color: #ff00ff;
		color: yellow;
		padding: 0 5px;
		font-weight: bold;
	}

	/* Skills section */
	.skills {
		margin: 20px 0;
		background-color: rgba(0, 0, 0, 0.5);
		border: 5px outset #c0c0c0;
		padding: 20px;
	}

	.skill-icons {
		display: flex;
		justify-content: space-around;
		margin-top: 20px;
	}

	.skill {
		text-align: center;
	}

	.skill img {
		width: 80px;
		height: 80px;
	}

	/* Glow text */
	.glow-text {
		color: #ffff00;
		text-shadow: 0 0 5px #ffff00, 0 0 10px #ffff00;
		font-size: 2rem;
	}

	/* Contact section */
	.contact {
		margin: 20px 0;
		background-color: rgba(0, 0, 0, 0.5);
		border: 5px outset #c0c0c0;
		padding: 20px;
	}

	.contact-info {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		margin: 0 auto;
		width: fit-content;
	}

	.contact-info p {
		display: flex;
		align-items: center;
		margin: 10px 0;
	}

	.contact-info img {
		width: 30px;
		height: 30px;
		margin-right: 10px;
	}

	/* Visitor counter */
	.visitor-counter {
		margin: 20px 0;
		background-color: rgba(0, 0, 0, 0.5);
		border: 3px inset #c0c0c0;
		padding: 10px;
	}

	.counter {
		display: flex;
		justify-content: center;
		margin-top: 10px;
	}

	.counter span {
		background-color: black;
		color: #00ff00;
		border: 1px solid #333;
		padding: 5px 10px;
		font-family: "Courier New", monospace;
		font-size: 1.5rem;
		margin: 0 2px;
	}

	/* Webring */
	.webring {
		margin: 20px 0;
		background-color: rgba(0, 0, 0, 0.5);
		border: 3px outset #c0c0c0;
		padding: 10px;
	}

	.webring-links {
		display: flex;
		justify-content: center;
		gap: 20px;
		margin-top: 10px;
	}

	.webring-links a {
		color: #00ffff;
		text-decoration: underline;
	}

	/* Divider */
	.divider {
		margin: 20px 0;
	}

	/* Footer */
	footer {
		margin-top: 40px;
		font-size: 0.8rem;
	}

	.browser-icons {
		display: flex;
		justify-content: center;
		gap: 10px;
		margin-top: 10px;
	}

	.browser-icons img {
		height: 30px;
	}
	
	/* Navigation */
	.nav-container {
		background-color: rgba(0, 0, 0, 0.7);
		padding: 10px;
		border: 3px outset #c0c0c0;
		margin-bottom: 20px;
	}
	
	.home-button {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 10px;
		color: #00ffff;
		text-decoration: none;
		font-weight: bold;
	}
	
	.home-button:hover {
		text-decoration: underline;
	}
	
	.home-button img {
		width: 30px;
		height: 30px;
		animation: pulse 2s infinite;
	}
	
	@keyframes pulse {
		0% { transform: scale(1); }
		50% { transform: scale(1.2); }
		100% { transform: scale(1); }
	}
</style>